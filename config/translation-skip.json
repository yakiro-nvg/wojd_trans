{
  "rules": [
    {
      "namespace": "RowObjectBase",
      "keyRegex": ".*-Title$",
      "sourcePattern": "^[A-Za-z0-9_]+$",
      "comment": "Skip Pinyin lookup keys like Paiming, Bangpai - but allow Chinese titles"
    },
    {
      "namespace": "Battle",
      "keyRegex": "^(13[0-9]|14[0-9]|15[0-2])$"
    },
    {
      "namespace": "Battle.txt",
      "keyRegex": "^(1[3-5][0-9]|152)$"
    },
    {
      "sourcePattern": ".*\\.data$",
      "comment": "Skip .data asset file references - these are technical identifiers"
    },
    {
      "sourcePattern": "^Play_",
      "comment": "Skip Play_* asset/audio names"
    },
    {
      "sourcePattern": "^/Script/|^/Game/",
      "comment": "Skip Unreal Engine asset paths"
    },
    {
      "sourcePattern": "^(WhiteTemp|BloomThreshold|BloomIntensity)$",
      "comment": "Skip post-processing technical settings"
    },
    {
      "sourcePattern": "@@FactionIf|/FactionIf",
      "comment": "Skip FactionIf markup - these are conditionals not visible text"
    }
  ]
}
